<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.kuklee.MainActivity">

    <ImageView
        android:id="@+id/zdjecie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bgkukle" />

    <ImageButton
        app:srcCompat="@drawable/cien"
        android:background="@android:color/transparent"
        android:id="@+id/imageButton"
        android:scaleType="fitCenter"
        android:layout_height="400dp"
        android:layout_width="400dp"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        app:srcCompat="@drawable/arrowkukle"
        android:background="@android:color/transparent"
        android:id="@+id/arrowkukle"
        android:scaleType="fitCenter"
        android:layout_height="40dp"
        android:layout_width="70dp"
        android:layout_alignBottom="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAP TO KU-KLE"
        android:textColor="#00deff"
        android:textSize="32sp"
        android:fontFamily="sans-serif-light"
        android:paddingRight="25dp"
        android:paddingBottom="20dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TA BANDA...\nIMBECYLI..."
        android:textColor="#00deff"
        android:textSize="32sp"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="25dp"
        android:paddingTop="20dp"
        android:id="@+id/textView"
        android:layout_above="@+id/imageButton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
